---
layout: base.njk
title: "Bav'ArtS Collection"
---

  

    <!-- Cart UI -->
    <div id="cart-panel" class="fixed top-0 right-0 h-full w-full md:w-96 bg-white shadow-lg transform translate-x-full 
        transition-transform duration-300 z-40">
        <div class="cart-panel-container p-4 flex flex-col">
            <div class="flex justify-between items-center mb-4 flex-shrink-0">
                <h2 class="text-2xl font-bold text-amber-900">Shopping Cart</h2>
                <button id="close-cart" class="text-gray-500 hover:text-gray-700 p-2">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            <!-- Cart Total Display -->
            <div class="mb-4 p-3 bg-amber-50 rounded-lg border border-amber-200 flex-shrink-0">
                <div class="flex justify-between items-center">
                    <span class="font-bold text-lg">Total:</span>
                    <span id="cart-total" class="font-bold text-lg text-lime-700">€0.00</span>
                </div>
            </div>

            <!-- Accordion Container -->
            <div class="flex-1 flex flex-col min-h-0">
                <div class="accordion-container flex-1">

                    <!-- Cart Items Accordion -->
                    <div id="cart-items-accordion" data-accordion="cart-items" class="accordion-header">
                        <button id="cart-items-toggle"
                            class="accordion-header w-full px-4 py-3 text-left bg-gray-50 hover:bg-gray-100 flex justify-between items-center transition-colors">
                            <span class="font-semibold text-gray-700">Cart Items</span>
                            <div class="flex items-center space-x-2">
                                <span id="cart-count-badge"
                                    class="bg-lime-700 text-white rounded-full px-2 py-1 text-xs">0</span>
                                <svg id="cart-items-chevron"
                                    class="w-5 h-5 text-gray-500 transform transition-transform accordion-chevron-rotated"
                                    fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M19 9l-7 7-7-7" />
                                </svg>
                            </div>
                        </button>
                        <div id="cart-items-content" class="accordion-content">
                            <div class="p-4 space-y-4">
                                <div id="cart-items" class="space-y-4"></div>

                                <!-- Cart Action Buttons -->
                                <div class="space-y-2 pt-2 border-t border-gray-200">
                                    <button id="proceed-to-checkout" type="button"
                                        class="w-full bg-lime-700 text-white py-2 px-4 rounded hover:bg-lime-800 disabled:bg-gray-300 disabled:cursor-not-allowed transition-colors">
                                        Proceed to Checkout
                                    </button>
                                    <button id="clear-cart" type="button"
                                        class="w-full border border-red-600 text-red-600 py-2 px-4 rounded hover:bg-red-50 transition-colors">
                                        Clear Cart
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Checkout Form Accordion -->
                    <div id="checkout-form-accordion" data-accordion="checkout-form" class="accordion-header">
                        <button id="checkout-form-toggle"
                            class="accordion-header w-full px-4 py-3 text-left bg-gray-50 hover:bg-gray-100 flex justify-between items-center transition-colors">
                            <span class="font-semibold text-gray-700">Checkout Information</span>
                            <svg id="checkout-form-chevron" class="w-5 h-5 text-gray-500 transform transition-transform"
                                fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M19 9l-7 7-7-7" />
                            </svg>
                        </button>
                        <div id="checkout-form-content" class="accordion-content hidden">
                            <div class="p-4">
                                <h3 class="text-lg font-semibold text-amber-900 mb-3">Customer Information</h3>

                                <form id="checkout-form" class="space-y-3">
                                    <div>
                                        <label for="cart-customer-name"
                                            class="block text-sm font-medium text-gray-700 mb-1">
                                            Full Name *
                                        </label>
                                        <input id="cart-customer-name" name="customerName" type="text"
                                            placeholder="Your Name" required minlength="3" maxlength="50"
                                            class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent invalid:border-red-500 invalid:ring-red-500">
                                        <div class="invalid-feedback hidden text-xs text-red-900 mt-1">
                                            Please enter your full name (3-50 characters).
                                        </div>
                                    </div>

                                    <div>
                                        <label for="cart-customer-email"
                                            class="block text-sm font-medium text-gray-700 mb-1">
                                            Email *
                                        </label>
                                        <input id="cart-customer-email" name="customerEmail" type="email"
                                            placeholder="your.email@example.com" required
                                            pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}"
                                            class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent invalid:border-red-500 invalid:ring-red-500">
                                        <div class="invalid-feedback hidden text-xs text-red-900 mt-1">
                                            Please enter a valid email address.
                                        </div>
                                    </div>

                                    <!-- Delivery Address Section -->
                                    <div class="pt-3 border-t border-gray-200">
                                        <h4 class="text-sm font-semibold text-gray-700 mb-3">Delivery Address</h4>

                                        <div>
                                            <label for="cart-address-street"
                                                class="block text-sm font-medium text-gray-700 mb-1">
                                                Street Address *
                                            </label>
                                            <input id="cart-address-street" name="addressStreet" type="text"
                                                placeholder="123 Main Street" required minlength="5" maxlength="100"
                                                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent invalid:border-red-500 invalid:ring-red-500">
                                            <div class="invalid-feedback hidden text-xs text-red-900 mt-1">
                                                Please enter a valid street address (5-100 characters).
                                            </div>
                                        </div>

                                        <div class="grid grid-cols-2 gap-3 mt-3">
                                            <div>
                                                <label for="cart-address-city"
                                                    class="block text-sm font-medium text-gray-700 mb-1">
                                                    City *
                                                </label>
                                                <input id="cart-address-city" name="addressCity" type="text"
                                                    placeholder="Amsterdam" required minlength="2" maxlength="50"
                                                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent invalid:border-red-500 invalid:ring-red-500">
                                                <div class="invalid-feedback hidden text-xs text-red-900 mt-1">
                                                    Please enter a valid city name.
                                                </div>
                                            </div>

                                            <div>
                                                <label for="cart-address-postal"
                                                    class="block text-sm font-medium text-gray-700 mb-1">
                                                    Postal Code *
                                                </label>
                                                <input id="cart-address-postal" name="addressPostal" type="text"
                                                    placeholder="1234 AB" required minlength="4" maxlength="10"
                                                    class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent invalid:border-red-500 invalid:ring-red-500">
                                                <div class="invalid-feedback hidden text-xs text-red-900 mt-1">
                                                    Please enter a valid postal code.
                                                </div>
                                            </div>
                                        </div>

                                        <div class="mt-3">
                                            <label for="cart-address-country"
                                                class="block text-sm font-medium text-gray-700 mb-1">
                                                Country *
                                            </label>
                                            <select id="cart-address-country" name="addressCountry" required
                                                class="w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-lime-500 focus:border-transparent invalid:border-red-500 invalid:ring-red-500">
                                                <option value="">Select a country</option>
                                                <option value="NL">Netherlands</option>
                                                <option value="BE">Belgium</option>
                                                <option value="DE">Germany</option>
                                                <option value="FR">France</option>
                                                <option value="UK">United Kingdom</option>
                                                <option value="US">United States</option>
                                                <option value="CA">Canada</option>
                                                <option value="AU">Australia</option>
                                                <option value="other">Other</option>
                                            </select>
                                            <div class="invalid-feedback hidden text-xs text-red-900 mt-1">
                                                Please select a country.
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Terms of Service Section -->
                                    <div class="tos-section pt-3 border-t border-gray-200">
                                        <p class="tos-text text-xs text-gray-600 mb-3 leading-relaxed">
                                            By placing this order, you agree to our Terms of Service and Privacy Policy.
                                            All sales are final. Custom artwork may require additional time for
                                            completion.
                                        </p>
                                        <label class="tos-checkbox flex items-start space-x-2 cursor-pointer">
                                            <input id="cart-accept-tos" name="acceptTos" type="checkbox" required
                                                class="mt-0.5 h-4 w-4 text-lime-600 focus:ring-lime-500 border-gray-300 rounded">
                                            <span class="text-xs text-gray-700">
                                                I accept the Terms of Service and Privacy Policy *
                                            </span>
                                        </label>
                                        <div class="invalid-feedback hidden text-xs text-red-900 mt-1">
                                            You must accept the Terms of Service to continue.
                                        </div>
                                    </div>

                                    <!-- Submit Button inside form -->
                                    <div class="pt-4">
                                        <button id="checkout-btn" type="submit"
                                            class="w-full bg-lime-700 text-white py-2 px-4 rounded hover:bg-lime-800 disabled:bg-gray-300 disabled:cursor-not-allowed mb-2 transition-colors">
                                            <span class="checkout-btn-text">Send Order</span>
                                            <span class="checkout-btn-loading hidden">Sending...</span>
                                        </button>
                                    </div>

                                    <!-- Validation Messages -->
                                    <div id="cart-validation-messages"
                                        class="hidden mb-3 p-2 bg-red-50 border border-red-300 rounded-md">
                                        <p class="text-xs text-red-900 font-medium mb-1">Please fix the following
                                            errors:</p>
                                        <ul id="cart-validation-list"
                                            class="text-xs text-red-900 space-y-1 list-disc list-inside"></ul>
                                    </div>

                                    <!-- Success Message -->
                                    <div id="cart-success-message"
                                        class="hidden mb-3 p-2 bg-green-50 border border-green-200 rounded-md">
                                        <p class="text-xs text-green-600">Order sent successfully! We'll contact you
                                            soon.</p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

    <!-- Hero Section -->
    {% include 'hero.njk' %}

    <!-- About Section -->
   {% include 'about.njk' %}

    <!-- Products Section -->
    <section class="px-2 products bg-amber-200 py-36 relative" id="products" 
        style="background-attachment: fixed; background-image: url('./assets/cover2.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center;">
        
        <!-- Overlay for transparency -->
        <div class="absolute inset-0 bg-amber-200 opacity-90"></div>
        
        <!-- Content with relative positioning to appear above overlay -->
        <div class="relative z-10">
            <h2 class="text-6xl font-bold text-center mt-24 mb-16 text-amber-950">Our Products</h2>

            <div id="js-products" class="container min-h-150 mx-auto grid grid-cols-1 md:grid-cols-3 gap-4">

                <div class="product-card bg-amber-100 p-4 rounded">
                    <img src="assets/bowl.gif" alt="" class="w-full sepia-60" />
                    <h3 class="text-2xl font-bold mt-2 text-amber-900">Loading...</h3>
                    <p class="text-xl mt-1 text-slate-700">€ ...</p>
                </div>
                <div class="product-card bg-amber-100 p-4 rounded">
                    <img src="assets/bowl.gif" alt="" class="w-full sepia-60" />
                    <h3 class="text-2xl font-bold mt-2 text-amber-900">Loading...</h3>
                    <p class="text-xl mt-1 text-slate-700">€ ...</p>
                </div>
                <div class="product-card bg-amber-100 p-4 rounded">
                    <img src="assets/bowl.gif" alt="" class="w-full sepia-60" />
                    <h3 class="text-2xl font-bold mt-2 text-amber-900">Loading...</h3>
                    <p class="text-xl mt-1 text-slate-700">€ ...</p>
                </div>

                <!-- End of product block -->
            </div>
        </div>
    </section>

